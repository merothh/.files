# reload the configuration file
bindsym $mod+Shift+f reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Run polkit-gnome-authentication-agent-1 for polkit
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Swap Caps Lock key with ESC key
exec_always --no-startup-id xmodmap -e "clear lock" #disable caps lock switch
exec_always --no-startup-id xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape

# disable window focus following the damn mouse
focus_follows_mouse no

# keep the screen compositor running always for transparency
exec_always --no-startup-id compton

# set a custom wallpaper
exec_always --no-startup-id "feh --bg-scale ~/.config/i3/wallpaper.jpg"

# i3-lock
bindsym $mod+shift+x exec "i3lock --c $i3-lock-color"

# screenshot key
bindsym Print exec scrot ~/Pictures/Screenshots/Screenshot-%Y-%m-%d-%H-%M-%S.png && paplay ~/.config/i3/camera-shutter.oga

# Screen brightness controls
bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"

# Audio Controls
bindsym XF86AudioRaiseVolume exec ponymix increase 5 --max-volume 153 # increase volume
bindsym XF86AudioLowerVolume exec ponymix decrease 5 --max-volume 153 # decrease volume
bindsym XF86AudioMute exec ponymix toggle # toggle mute
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Enable Two Finger Scrolling on my Touchpad
exec_always --no-startup-id xinput --set-prop 14 "Synaptics Two-Finger Scrolling" 1 1

# Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# set border to zero
for_window [class=".*"] border pixel 0

# set gaps width
gaps bottom 0
gaps inner 5
gaps outer 3

